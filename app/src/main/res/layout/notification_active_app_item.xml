<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="32dp"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_app_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/signer_notification_app_icon"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_app_letter"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_circle_avatar"
        android:gravity="center"
        android:textColor="@color/signer_notification_app_icon_fg"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/signer_notification_text_primary"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/signer_notification_avatar"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/button_end_session"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="@drawable/bg_end_session_chip"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/signer_notification_end_session"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</LinearLayout>
